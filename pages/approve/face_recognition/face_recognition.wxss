.header {
  width: 100%;
  height: 320rpx;
  background-image: linear-gradient(135deg, #7984FF 0%, #4298EC 100%);
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.i-steps-box {
  width: 100%;
}

.add-img {
  width: 670rpx;
  height: 780rpx;
  border-radius: 20rpx;
  margin: -20px auto 0 auto;
  box-shadow: 0 10rpx 12rpx rgba(218, 222, 232, 0.5);
  background: #fff;
  padding-top: 24rpx;
}

.middle {
  text-align: center;
  margin: 36rpx;
}

.text-tip1 {
  font-size: 36rpx;

}

.rec-img {
  width: 270rpx;
  height: 270rpx;
}

.text-tip2 {
  margin-top: 40rpx;
  font-size: 28rpx;
}

.need-item {
  width: 500rpx;
  height: 500rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin: 20rpx auto;
}

.left {
  width: 50%;

}
.need-tips{
  text-align: left;
  margin-bottom: 8rpx;
}
.add-item {
  text-align: center;
  font-size: 36rpx;

}

.add-icon-img {
  width: 300rpx;
  height: 200rpx;
  margin-top: 12rpx;
}

.btn {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 160rpx;
  left: 0;
}

.btn button {
  width: 676rpx;
  height: 90rpx;
  text-align: center;
  color: #fff;
  border-radius: 45rpx;
  background: #1890FF;
}
